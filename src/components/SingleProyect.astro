---
 interface Props {
    name:string
    description:string
    src:string
}

const {name,description,src}=Astro.props
---

<article>
    <div>
        
    <img src={src} alt="">
    <h3>{name}</h3>
    </div>
    <div>
    <p>{description}</p>
    </div>
</article>

<style>
    
    article{
        overflow: hidden;
        border: 1px gray;
        box-shadow: 2px 1px 7px #1a1a1a;
        transition: transform color .4s ease;
        transform-origin: bottom;
        &:hover{
        box-shadow: 3px 3px 10px 2px #1a1a1a ;
            & img{
            transform: scale(1.05);
            background-color: transparent;
            }
        }
    }

    div:not(>img){
        padding: 16px;
        display: flex;
    }
    h3,p{
        padding-inline-start: 8px;
 
    }

    h3{
        position: absolute;
        bottom: 0;
    }

    body[dark] h3{
        color: var(--gradone);
    }


    div:has(>img){
        position: relative;
        height: fit-content;
        width: 100%;
        & img{
        width: 100%;
        aspect-ratio: 16/10;
        scale: 1;
        transition: transform .4s ease;
        bottom: 12px;
        }
        
    }

    
</style>