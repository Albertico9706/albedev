---
 interface Props {
    name:string
    description:string
    src:string
}

const {name,description,src}=Astro.props
---

<article>
    <div><img src={src} alt=""><h3>{name}</h3></div>
    <div>
        <p>{description}</p>
        <button class="btn-primary">Ver detalles</button>
    </div>
</article>

<style>
    
    article{
        overflow: hidden;
        border: 1px gray;
        box-shadow: 0px 1px 3px 0px #1a1a1a;
        transition: transform .4s ease;
        transform-origin: bottom;
        &:hover{
            box-shadow: 1px 2px 5px 0px #1a1a1a ;
            & img{
            transform: scale(1.05);
            }
        }
    }

    h3,p{
        padding-inline-start: 8px;
 
    }

    h3{
        position: absolute;
        bottom: 0;
    }

    body[dark] h3{
        
    }

    body[dark] article{
        background: var(--base) ;
        color: var(--gradone);
    }


    div:has(>img){
        position: relative;
        height: fit-content;
        width: 100%;
        & img{
        width: 100%;
        aspect-ratio: 16/10;
        scale: 1;
        transition: transform .4s ease;
        bottom: 12px;
        }
        
    }

    
    div:has(button) {
        padding: 16px;
        position: relative;
        display: flex;
        flex-direction: column;



    }

    button{
        padding: 8px;
        margin: 4px;
        align-self: self-end;
        
        
    }

    
</style>