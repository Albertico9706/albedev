---
 interface Props {
    name:string,
    description:string,
    github?:string;
    demo?:string;
    src?:string
}
import GithubIco from './icons/simple_icons/GithubIco.astro';

const {name,description,src,demo,github}=Astro.props
---

<article>
    <div><img src={src} alt=""><h3>{name}</h3></div>
    <div>
        <div>
            <a href={github} class="github"><span><GithubIco/></span> Github</a>
            <a href={demo} class="demo">Demo</a>
        </div>
        <p>{description}</p>
    </div>
</article>

<style>
    div:has(>p){
        padding: 16px;
    }
    div a span{
        width: 16px;
        display: inline-block;
        
    }

    div a{
        background-color: #acaaaa;
        outline: 1px #000;
        width: 30%;
        display: flex;
        gap: 4px;
        padding: 4px;
        border-radius: 4px;
        text-decoration: none;
        color: #000;
    }

    div a:hover{
        color:var(--light-blue);
        transition:color .2s ease;
    }

    div:has(>a){
        display: flex;
        justify-content: space-between;
    }
    .github div{

    }
    .demo{
        
    }

    img{
        aspect-ratio: 1.5;
    }
    article{
        overflow: hidden;
        border: 1px gray;
        box-shadow: 0px 1px 3px 0px #1a1a1a;
        transition: transform .4s ease;
        transform-origin: bottom;
        &:hover{
            box-shadow: 1px 2px 5px 0px #1a1a1a ;
            & img{
            transform: scale(1.05);
            }
        }
    }

    h3,p{
        padding-inline-start: 8px;
       
 
    }

    h3{
        position: absolute;
        bottom: 0;
        color: var(--light-blue);
    }

    body[dark] h3{
        
    }

article{
        background: var(--gradone) ;
        
    }


    div:has(>img){
        position: relative;
        height: fit-content;
        width: 100%;
        & img{
        width: 100%;
        aspect-ratio: 16/10;
        scale: 1;
        transition: transform .4s ease;
        bottom: 12px;
        }
        
    }

    button{
        padding: 8px;
        margin: 4px;
        align-self: self-end;
        
        
    }

    
</style>