        }
    }
        
    h1{
        
        animation: 2s ease fade_down;
        font-size: 42px;
    }
    
    h3{
        align-self: flex-end;
        animation: 1s ease fade_up;
    }

   

    @keyframes fade_up{
        from{
            opacity: 0;
            transform: translateY(30px) ;
            
        }
        to{
            opacity:1;
        }
    }

    @keyframes fade_down{
        from{
            opacity: 0;
            transform: translateY(-30px) ;
            
        }
        to{
            opacity:1;
        }
    }
</style>
